<ServerManagerConfiguration>
  <!-- Begin ElevationSurfaceFilter -->
  <ProxyGroup
    name="filters">
    <SourceProxy
      name="ElevationSurface"
      class="vtkElevationSurfaceFilter"
      label="Elevation Surface">

      <Documentation
        long_help="Create a point set with data at ElevationSurface points. Cells are shrinked by a given factor towards the cell center."
        short_help="Create a point set with data at ElevationSurface points. Cells are shrinked by a given factor towards the cell center.">
        "Create a point set with data at quadrature points."
      </Documentation>

      <OutputPort
        name="ElevationSurface"
        index="0" />

      <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain
          name="groups">
          <Group
            name="sources" />
          <Group
            name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain
          name="input_type">
          <DataType
            value="vtkPointSet" />
        </DataTypeDomain>
        <InputArrayDomain
          name="input_array"
          attribute_type="cell"
          number_of_components="1"/>
      </InputProperty>

      <!-- Source Array -->
      <StringVectorProperty
        name="SelectSourceArray"
        command="SetInputArrayToProcess"
        number_of_elements="5"
        element_types="0 0 0 0 2"
        label="Elevation Field"
        animateable="0">
        <Documentation>
          Specifies the cell field used for the elevation surface.
        </Documentation>
        <ArrayListDomain
          name="array_list"
          input_domain_name="input_array"
          attribute_type="Scalars" >
          <RequiredProperties>
            <Property
              name="Input"
              function="Input" />
          </RequiredProperties>
        </ArrayListDomain>
      </StringVectorProperty>

      <DoubleVectorProperty
        name="ScaleFactor"
        command="SetScaleFactor"
        label="Scale Factor"
        number_of_elements="1"
        default_values="0.5">
      </DoubleVectorProperty>

      <DoubleVectorProperty
        name="Direction"
        command="SetDirection"
        label="Direction"
        number_of_elements="3"
        default_values="0 0 1">
      </DoubleVectorProperty>

      <IntVectorProperty
        name="AutoDetectDirection"
        command="SetAutoDetectDirection"
        label="Auto Detect Direction"
        number_of_elements="1"
        default_values="1">
        <BooleanDomain name="bool"/>
      </IntVectorProperty>

    </SourceProxy>

  </ProxyGroup>
  <!-- End ElevationSurfaceFilter -->
</ServerManagerConfiguration>
