<ServerManagerConfiguration>
  <!-- Begin ScaleVectorFilter -->
  <ProxyGroup
    name="filters">
    <SourceProxy
      name="ScaleVector"
      class="vtkScaleVectorFilter"
      label="Scale Vector">

      <Documentation
        long_help="Multiply a vector by a scale factor, and remove the vectors sharing the same name pattern."
        short_help="Multiply a vector by a scale factor, and remove the vectors sharing the same name pattern.">
        "Multiply a vector by a scale factor."
      </Documentation>

      <OutputPort
        name="ScaleVector"
        index="0" />

      <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain
          name="groups">
          <Group
            name="sources" />
          <Group
            name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain
          name="input_type">
          <DataType
            value="vtkDataSet" />
        </DataTypeDomain>
        <InputArrayDomain
          name="input_array"
          attribute_type="point"
          number_of_components="3"/>
      </InputProperty>

      <!-- Source Array -->
      <StringVectorProperty
        name="SelectSourceArray"
        command="SetInputArrayToProcess"
        number_of_elements="5"
        element_types="0 0 0 0 2"
        label="Vector Field"
        animateable="0">
        <Documentation>
          Specifies the cell field used for the elevation surface.
        </Documentation>
        <ArrayListDomain
          name="array_list"
          input_domain_name="input_array"
          attribute_type="Vectors" >
          <RequiredProperties>
            <Property
              name="Input"
              function="Input" />
          </RequiredProperties>
        </ArrayListDomain>
      </StringVectorProperty>

      <DoubleVectorProperty
        name="ScaleFactor"
        command="SetScaleFactor"
        label="Scale Factor"
        number_of_elements="1"
        default_values="1">
        <DoubleRangeDomain name="range" min="-1" max="1"/>
      </DoubleVectorProperty>

    </SourceProxy>

  </ProxyGroup>
  <!-- End ScaleVectorFilter -->
</ServerManagerConfiguration>
